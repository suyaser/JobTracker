<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/MenuBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        app:titleTextColor="@android:color/white" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/genSerialTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:text="serial" />

            <TextView
                android:id="@+id/genSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:text="size" />

            <TextView
                android:id="@+id/tankSerialTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/genSerialTextView"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="tank serial" />

            <TextView
                android:id="@+id/FireExtTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tankSerialTextView"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="fire extinguisher" />

            <TextView
                android:id="@+id/siteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FireExtTextView"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="site" />

            <Button
                android:id="@+id/tripButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/siteTextView"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:text="trip" />

            <Button
                android:id="@+id/serviceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tripButton"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tripButton"
                android:layout_toStartOf="@+id/tripButton"
                android:text="service" />

            <TextView
                android:id="@+id/syncPanelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/genSizeTextView"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="sync panel" />

            <TextView
                android:id="@+id/FETextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/syncPanelTextView"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="feserial" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>