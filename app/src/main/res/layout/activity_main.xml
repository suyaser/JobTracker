<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fawarespetroleum.yasser.jobtracker.activities.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/MenuBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        app:titleTextColor="@android:color/white"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fieldButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="8dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/generatorButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/factory_48dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/field"
            android:textColor="#42A5F5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/generatorButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="8dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toRightOf="@+id/fieldButton"
        android:layout_marginTop="142dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/workshopButton"
        android:layout_marginLeft="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/pump_filled_48dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/generators"
            android:textColor="#42A5F5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/workshopButton"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="8dp"
        tools:text="Workshop"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/fieldButton"
        app:layout_constraintTop_toTopOf="@+id/generatorButton">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ic_home_blue_400_48dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/workshop"
            android:textColor="#42A5F5" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>

